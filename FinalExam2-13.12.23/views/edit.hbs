<main>
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Course</h1>
                <form method="POST">
                    <label>Title:</label>
                    <input name="title" type="text" id="title" value="{{crypto.title}}">

                    <label>Type:</label>
                    <input name="type" type="text" id="type" value="{{crypto.type}}">

                    <label>Certificate:</label>
                    <input name="certificate" type="text" id="certificate" value="{{crypto.certificate}}">

                    <label>Image:</label>
                    <input name="image" type="text" id="image" placeholder="http://..." value="{{crypto.image}}">

                    <label>Description:</label>
                    <textarea id="content" name="description">{{crypto.description}}</textarea>

                    <label>Price:</label>
                    <input name="price" type="number" id="price" value="{{crypto.price}}">

                    <input type="submit" id="btn" value="Edit">
                </form>
            </div>
        </section>
</main>